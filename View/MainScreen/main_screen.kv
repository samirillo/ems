<MainScreenView>
    ScreenLayout:
        title: "EMS"
        caption: "Aqui podras ver la informacion de tu equipo de campa√±a"
        nav_button: app.navigation_drawer.set_state
        MDBoxLayout:
            orientation: "vertical"
            MDLabel:
                font_style: "H5"
                text: "Estadisticas"
                size_hint_y: 0.1
                line_height: 1
                padding_x: "10dp"
            MDCarousel:
                id: carousel
                on_slide_progress: root.controller.on_slide_progress(*args)
                MDRaisedButton:
                    text: "SLIDE 1"
                    pos_hint: {"center_x": .5, "center_y": .5}

                MDRaisedButton:
                    text: "SLIDE 2"
                    pos_hint: {"center_x": .5, "center_y": .5}

                MDRaisedButton:
                    text: "SLIDE 3"
                    pos_hint: {"center_x": .5, "center_y": .5}                   
                       


