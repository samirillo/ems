<SplashScreenView>
    FitImage:
        source: "assets/images/splash.png"
        size_hint_y: 1
        pos_hint: {"top": .9}
        radius: 36, 36, 0, 0
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Administrador de listas electorales"

        MDFloatLayout:

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                size_hint_x: None
                width: root.width - dp(72)
                radius: 12
                padding: "12dp"
                md_bg_color: 1, 1, 1, .5
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    id: prev_label
                    text: "\n\n  Cree y administre\n su equipo de campa√±a y lista de electores:\nRegistrese para crear una cuenta de administrador"
                    font_style: "H4"
                    adaptive_height: True
                    halign: "center"

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    padding: "50dp"
                    spacing: "20dp"



    MDFillRoundFlatButton:
        text: "     INGRESAR     "
        on_release: root.controller.on_tap_button_login("login screen")
        pos_hint: {"center_x": .3, "center_y": .1}

    MDFillRoundFlatButton:
        text: "REGISTRARSE"
        on_release: root.controller.on_tap_button_signup("singup screen")
        pos_hint: {"center_x": .8, "center_y": .1}

